#!/bin/bash
# This script runs a specified Python file

# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
  echo "Error: PYFILE environment variable is not set. Please set it to the Python script's filename."
  exit 1
fi

# Check if the specified Python script exists
if [ ! -f "$PYFILE" ]; then
  echo "Error: Python script '$PYFILE' not found in the current directory."
  exit 1
fi

# Run the Python script
python3 "$PYFILE"
